{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://raw.githubusercontent.com/samlitowitz/godepvis/refs/heads/master/assets/config-schema/config.json",
	"title": "Config",
	"description": "Configuration for Go dependency visualization (github.com/samlitowitz/godepvis)",
	"type": "object",
	"properties": {
		"resolution": {
			"description": "Scope to resolve import cycles to, same as the -resolution flag",
			"type": "string",
			"enum": [
				"file",
				"package"
			]
		},
		"palette": {
			"description": "Color palette to use when generating visualizable outputs.",
			"type": "object",
			"properties": {
				"base": {
					"description": "Colors used for packages and files not in a cycle",
					"$ref": "https://raw.githubusercontent.com/samlitowitz/godepvis/refs/heads/master/assets/config-schema/half-palette.json"
				},
				"cycle": {
					"description": "Colors used for packages and files in a cycle",
					"$ref": "https://raw.githubusercontent.com/samlitowitz/godepvis/refs/heads/master/assets/config-schema/half-palette.json"
				}
			}
		}
	}
}
